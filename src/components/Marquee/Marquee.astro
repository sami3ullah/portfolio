---
interface MarqueProps {
  text: string;
}

const { text } = Astro.props;
---

<div class="marquee bg-primary dark-trailer relative z-30">
  <div class="marquee__group">
    <span>{text}<span> ✦</span></span>
    <span>{text}<span> ✦</span></span>
    <span>{text}<span> ✦</span></span>
  </div>
  <div class="marquee__group" aria-hidden="true">
    <span>{text}<span> ✦</span></span>
    <span>{text}<span> ✦</span></span>
    <span>{text}<span> ✦</span></span>
  </div>
</div>

<style>
  .marquee {
    display: flex;
    overflow: hidden;
    height: 15vh;
    user-select: none;
    gap: 2rem;
    padding: 2rem 0;
  }
  .marquee__group {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
    min-width: 100%;
    animation: scroll 15s linear infinite forwards;
  }

  .marquee__group span {
    color: #000;
    font-size: 5rem;
    font-weight: 600;
    white-space: nowrap;
  }

  .marquee__group span span {
    font-size: 4.5rem;
    font-weight: 300;
  }

  @keyframes scroll {
    from {
      transform: translateX(0);
    }
    to {
      transform: translateX(calc(-100% - 2rem));
    }
  }

  @media only screen and (max-width: 768px) {
    .marquee__group span {
      font-size: 2.5rem;
    }

    .marquee{
      padding: 0;
      height: 10vh;
    }

    .marquee__group span span {
    font-size: 2rem;
    font-weight: 300;
  }
  }
</style>
