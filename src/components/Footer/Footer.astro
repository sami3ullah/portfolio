---
import Character from './Character.astro';
import CopyRights from './CopyRights.astro';
---

<section
  class="fixed_footer bg-darkBackground flex items-center gap-[5vw] px-pageXMobile md:px-pageX pt-[80px] pb-[60px] md:pb-[90px] lg:pt-[110px] w-full"
>
  <div>

    <h2
      class="text-textLightPrimary text-center md:text-left mb-[50px] text-[30px] md:text-[50px] lg:text-[4rem] leading-[1.133em] lg:leading-[1.33em] font-bold"
    >
      Bug Me!
    </h2>
    <a class="text-textLightPrimary text-center md:text-left block uppercase mb-[40px]"
      >msami398@gmail.com</a
    >
    <div
      class="interactable interactable-link text-center md:text-left mb-[20px] md:mb-[80px]"
    >
      <a
        href="https://www.linkedin.com/in/sami3ullah/"
        target="_blank"
        class="mr-[20px] relative text-[16px] leading-[24px] text-textDullest hover:text-darkBackground2 py-[15px]"
        >LinkedIn</a
      >
      <a
        href="https://github.com/sami3ullah"
        target="_blank"
        class="mr-[20px] relative text-[16px] leading-[24px] transition-all text-textDullest hover:text-darkBackground2 py-[15px]"
        >Github</a
      >
      <a
        href="https://stackoverflow.com/users/6900808/sami"
        target="_blank"
        class="mr-[20px] relative text-[16px] leading-[24px] transition-all text-textDullest hover:text-darkBackground2 py-[15px]"
        >Stackoverflow</a
      >
    </div>
    <!-- Moving Text -->
    <div class="flex justify-center md:block">
      <CopyRights text="Â©Muhammad. All Rights Reserved" />
    </div>
  </div>
  <div class="flex-1 opacity-[0.35]">
    <Character />
  </div>
</section>

<style>
  .fixed_footer {
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: -100;
  }
</style>

<script>
  import gsap from 'gsap';
  import { ScrollTrigger } from 'gsap/dist/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  gsap.from('.fixed_footer', 1.3, {
    y: 50,
    opacity: 0,
    ease: 'power4.inOut',
    delay: 1,
    stagger: {
      amount: 0.5,
    },
  });

  gsap.from('.fixed_footer', {
    scrollTrigger: {
      trigger: '.summary',
      start: 'bottom bottom',
      scrub: true,
    },
    y: -500,
  });
</script>
