---
import BrandsIWorkWith from './BrandsIWorkWith.astro';
import SocialIcon from './SocialIcon.astro';
---

<main
  class="flex flex-col md:flex-row justify-center
  md:justify-between text-textLight h-[calc(100vh-10rem)]
  md:mb-pageBottomTab lg:mb-pageBottom gap-10 md:gap-0"
>
  <!-- Main heading -->
  <h1
    class="main-title flex flex-col md:items-start self-center md:self-end
    text-center justify-center md:justify-end uppercase
    text-[4rem] md:text-[6rem] lg:text-[8.75rem] font-[800]
    leading-[50px] md:leading-[90px] lg:leading-[110px]"
  >
    <div class="relative">Making</div>
    <div class="tagline bg-primary -rotate-2 p-[8px] md:px-[0.8rem] lg:p-4">
      <div
        class="text-background text-[4rem] md:text-[5rem] lg:text-[8rem] relative"
      >
        Epic Shit
      </div>
    </div><div>Since</div><div>2019</div>
  </h1>
  <!-- social links -->
  <div class="self-center md:self-end flex flex-col items-center md:items-end gap-14">
    <!-- hidden on mobile -->
    <div class="hidden md:block">
      <BrandsIWorkWith />
    </div>
    <SocialIcon />
  </div>
</main>

<script>
  import gsap from 'gsap';

  gsap.from('h1.main-title', {
    y: 50,
    opacity: 0,
    ease: 'power4.inOut',
    delay: 1.5,
    duration: 1.3,
    stagger: {
      amount: 0.5,
    },
  });

  gsap.from('h1.main-title .tagline', {
    x: -100,
    opacity: 0,
    ease: 'power3.inOut',
    delay: 2,
    duration: 1.3,
    stagger: {
      amount: 0.3,
    },
  });
</script>
