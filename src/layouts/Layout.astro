---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="A passionate software engineer who loves creative problem-solving, design and teamwork. I adore what I do & excited to bring fresh ideas to the table. Let's connect!"
    />
    <meta name="viewport" content="width=device-width" />
    <meta property="og:title" content="Muhammad Samiullah" />
    <meta property="og:url" content="https://www.samidev.me" />
    <meta property="og:type" content="website" />
    <meta
      property="og:description"
      content="A passionate software engineer who loves creative problem-solving, design and teamwork. I adore what I do & excited to bring fresh ideas to the table. Let's connect!"
    />
    <meta property="og:image" content="/og-image.webp" />
    <meta property="og:site_name" content="Muhammad Samiullah's Portfolio" />
    <meta property="og:locale" content="en_US" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@samistories" />
    <meta name="twitter:creator" content="@samistories" />

    <link rel="icon" type="image/png" href="/logo.png" />
    <!-- font -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Manrope:wght@300;400;500;600;700;800&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content="{Astro.generator}" />
    <title>{title}</title>
    <!-- Google tag (gtag.js) -->
    <script
      type="text/partytown"
      async
      src="https://www.googletagmanager.com/gtag/js?id=G-ZQC1XS2QWG"></script>
    <script type="text/partytown">
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag('js', new Date());

      gtag('config', 'G-ZQC1XS2QWG');
    </script>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  *,
  body,
  html {
    font-family: 'Manrope', sans-serif;
    box-sizing: border-box;
    scrollbar-width: none;
    /* scroll-behavior: smooth; */
    scroll-margin: 15vh;
  }

  body {
    -ms-overflow-style: none;
    scrollbar-width: none;
    background: #000;
  }
  body::-webkit-scrollbar {
    display: none;
  }

  .interactable {
    cursor: none;
  }
</style>

<script>
  import Lenis from '@studio-freight/lenis';

  // ======== lenis scroll initialization =======
  const lenis = new Lenis();

  const raf = (time: number) => {
    lenis.raf(time);
    requestAnimationFrame(raf);
  };
  requestAnimationFrame(raf);
</script>
